{
  "manifest_version": 2,

  "name": "Easy Skeleton",
  "description": "用于帮助开发者快速生成界面对应的骨架屏",
  "version": "0.0.1",
  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/dist/content.js"],
      "css": ["css/icon.css", "css/content.css"]
    }
  ],
  "background": {
		"scripts": ["js/dist/background.js"]
	},
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ]
}